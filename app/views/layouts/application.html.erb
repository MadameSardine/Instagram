    <![endif]-->
  </head>

  <body>

    <div class="container">
      <div class="header">
        <ul class="nav nav-pills pull-right" role="tablist">
          <% if user_signed_in? %>
           <li class="bar-link"><a href='/posts/new'>Post</a></li>
            <li class="bar-link"><%= link_to "Sign out", destroy_user_session_path, method: :delete %></li>
          <% else %>
            <li class="bar-link"><%= link_to "Sign up", new_user_registration_path %></li>
            <li class="bar-link"><%= link_to "Log in", new_user_session_path %></li>
            <li class="bar-link" ><%= link_to "Log in with Facebook", user_omniauth_authorize_path(:facebook) %></li>

          <% end %>
        </ul>
        <h3 class="text-muted">Instagram</h3>
      </div>

        <p class="notice"><%= notice %></p>
        <p class="alert"><%= alert %></p>

      <div class="row marketing">
        <div class="col-lg-6">
          <%= yield %>
        </div>
      </div>

      <div class="footer">
        <p>&copy; MadameSardine 2014</p>
      </div>

    </div> <!-- /container -->


    <!-- IE10 viewport hack for Surface/desktop Windows 8 bug -->
     <!-- <script src="../../assets/js/ie10-viewport-bug-workaround.js"></script> -->
